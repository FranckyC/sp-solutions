{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Local Azure Function",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/dist/**/*.js" ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest all tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    }
  ]
}
